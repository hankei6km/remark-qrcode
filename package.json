{
  "name": "my-starter-ts-npm-cli-and-lib",
  "version": "0.1.2",
  "description": "Typescript で CLI とライブラリの npm パッケージを作成するためのスターター。",
  "license": "MIT",
  "keywords": [],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "bin": {
    "count": "dist/main.js"
  },
  "scripts": {
    "start": "tsc && node dist/main.js",
    "start:watch": "nodemon --watch src --ext ts --exec ts-node src/main.ts",
    "build": "tsc",
    "test": "jest",
    "clean": "rm dist/*",
    "upgrade-interactive": "npm-check --update",
    "csb:test": "npm test -- --runInBand --watchAll"
  },
  "dependencies": {
    "yargs": "^17.2.1"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.1",
    "@types/yargs": "^17.0.4",
    "jest": "^27.3.1",
    "nodemon": "^2.0.14",
    "npm-check": "^5.9.2",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.3.0",
    "typescript": "^4.4.4"
  }
}
